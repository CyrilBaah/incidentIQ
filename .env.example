# Elasticsearch Configuration
ELASTIC_CLOUD_ID=your-cloud-id-here
ELASTIC_API_KEY=your-api-key-here
ELASTIC_USERNAME=elastic
ELASTIC_PASSWORD=your-password-here
KIBANA_URL=https://your-deployment.kb.region.xxx.found.io:9243

# Anthropic API
ANTHROPIC_API_KEY=your-anthropic-key-here

# LLM Provider Selection
LLM_PROVIDER=gemini  # Options: gemini, anthropic

# Google Gemini API
GOOGLE_API_KEY=sk-ant-api03-xxxxxxxxxxxxx
GEMINI_MODEL=gemini-2.0-flash-exp  # or gemini-1.5-pro

# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-token-here
SLACK_SIGNING_SECRET=your-slack-signing-secret-here
